<h1>Students CRUD App using Rails</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th colspan="3"></th>
    </tr>
    <% @students.each do |std| %>
    <tr>
        <td><%= std.name %></td>
        <td><%= std.age %></td>
        <td>
            <%= link_to 'Show', student_path(std) %>       
        </td>
        <td><%= button_to 'Edit', edit_student_path(std), method:'get' %></td>
        <td><%= button_to 'Destroy', std, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    <%= link_to 'Add New Student', new_student_path %>
    </table>